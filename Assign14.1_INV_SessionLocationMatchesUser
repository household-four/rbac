-- ===== PASS: SessionLocationMatchesUser =====
!create u_loc_ok : User
!set u_loc_ok.userID := 'u_loc_ok'
!set u_loc_ok.location := 'Office'

!create s_loc_ok : Session
!set s_loc_ok.location := 'Office'
!insert (u_loc_ok, s_loc_ok) into UserSessions

-- Optional eval (should be true):
eval s_loc_ok.user.location = s_loc_ok.location
-- Invariants window: Session::SessionLocationMatchesUser = TRUE


